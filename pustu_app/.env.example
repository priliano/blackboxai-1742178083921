# API Configuration
API_BASE_URL=http://localhost:8000/api
API_TIMEOUT=30000

# Authentication
AUTH_TOKEN_KEY=auth_token
REFRESH_TOKEN_KEY=refresh_token

# Firebase Configuration
FIREBASE_API_KEY=your_firebase_api_key
FIREBASE_PROJECT_ID=your_project_id
FIREBASE_MESSAGING_SENDER_ID=your_sender_id
FIREBASE_APP_ID=your_app_id
FIREBASE_MEASUREMENT_ID=your_measurement_id

# FCM Configuration
FCM_SERVER_KEY=your_fcm_server_key
FCM_TOPIC_ALL=all_users
FCM_TOPIC_ADMIN=admin_users
FCM_TOPIC_STAFF=staff_users
FCM_TOPIC_PATIENT=patient_users

# App Configuration
APP_NAME=PUSTU Queue
APP_VERSION=1.0.0
APP_BUILD_NUMBER=1
APP_ENVIRONMENT=development # development, staging, production

# Feature Flags
ENABLE_ANALYTICS=true
ENABLE_CRASHLYTICS=true
ENABLE_PERFORMANCE_MONITORING=true
ENABLE_REMOTE_CONFIG=true
ENABLE_PUSH_NOTIFICATIONS=true
ENABLE_OFFLINE_MODE=true

# Queue Configuration
MAX_DAILY_QUEUES=100
QUEUE_START_TIME=08:00
QUEUE_END_TIME=16:00
ESTIMATED_SERVICE_TIME_MINUTES=15

# Display Configuration
DISPLAY_REFRESH_INTERVAL=10000 # milliseconds
DISPLAY_MAX_WAITING_NUMBERS=5

# Cache Configuration
CACHE_ENABLED=true
CACHE_DURATION=3600 # seconds

# Logging
LOG_LEVEL=info # debug, info, warning, error
SENTRY_DSN=your_sentry_dsn

# Analytics
ANALYTICS_ENABLED=true
ANALYTICS_TRACKING_ID=your_tracking_id

# Third Party Services
GOOGLE_MAPS_API_KEY=your_google_maps_api_key
SMS_GATEWAY_URL=your_sms_gateway_url
SMS_GATEWAY_API_KEY=your_sms_gateway_api_key

# Security
ENCRYPTION_KEY=your_encryption_key
SSL_CERTIFICATE_PATH=/path/to/certificate
SSL_KEY_PATH=/path/to/key

# Development
ENABLE_NETWORK_LOGGING=true
ENABLE_BLOC_LOGGING=true
ENABLE_PROVIDER_LOGGING=true
MOCK_SERVICES=false

# Note: Replace all 'your_*' values with actual values for your environment
# Do not commit actual values to version control
# Keep sensitive information secure and use appropriate security measures
